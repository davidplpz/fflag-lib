{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "domain/*": ["domain/*"],
      "application/*": ["application/*"],
      "infrastructure/*": ["infrastructure/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}